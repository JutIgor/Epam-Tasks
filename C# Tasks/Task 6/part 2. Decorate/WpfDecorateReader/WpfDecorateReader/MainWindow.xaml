<Window x:Class="WpfDecorateReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="MainWindow" Height="350" Width="500">
    <Grid>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="10" Margin="10,300,0,0" VerticalAlignment="Top" Width="450" ValueChanged="ProgressBar_ValueChanged" Maximum="1"/>
        <ScrollBar x:Name="ScrollBar" HorizontalAlignment="Left" Margin="470,60,0,0" VerticalAlignment="Top" Height="230" Width="15" ValueChanged="ScrollBar_ValueChanged" SmallChange="0.5" ViewportSize="0.2"/>
        <TextBox x:Name="TextBoxOut" HorizontalAlignment="Left" Height="230" Margin="10,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Height="20" Margin="100,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password: (656)" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="300,20,0,0" VerticalAlignment="Top" Width="75" Click="ButtonConfirm_Click"/>

    </Grid>
</Window>
