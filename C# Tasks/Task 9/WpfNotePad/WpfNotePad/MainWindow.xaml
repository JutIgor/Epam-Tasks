<Window x:Class="WpfNotePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="520">
    <Grid>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="250" Margin="135,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Hidden" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="ButtonLoad" Content="Load" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="ButtonLoad_Click"/>
        <Button x:Name="ButtonSave" Content="Save" HorizontalAlignment="Left" Margin="30,70,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="ButtonSave_Click" IsEnabled="False"/>
        <ScrollBar x:Name="ScrollBar" HorizontalAlignment="Left" Margin="485,30,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" Height="250" Width="17" ViewportSize="0.2" IsEnabled="False" ValueChanged="ScrollBar_ValueChanged"/>

    </Grid>
</Window>
